{
  "name": "dirgo",
  "version": "2.0.0",
  "description": "Fast directory structure generator with LLM context support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "dirgo": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./mcp": {
      "import": "./dist/mcp.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun run build.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "directory",
    "structure",
    "tree",
    "llm",
    "context",
    "mcp",
    "cli"
  ],
  "author": "Faizan Shaik",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fyzanshaik/dirgo"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ignore": "^5.3.0"
  },
  "optionalDependencies": {
    "clipboardy": "^4.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0"
  }
}
